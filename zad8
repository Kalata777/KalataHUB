package greativity;

public class zad8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
int k1=10000;
double ultraKala1=10000,kKala=0,ultraKala=0.06;
int k2=10;


for(int i=0;i<=k2;i++) {
	
	ultraKala1+=k1*ultraKala;
	System.out.println("Period sum:"+ ultraKala1);
}
for(int i=0;i<4;i++) {
	kKala+=ultraKala1;
	ultraKala1+=ultraKala1*ultraKala;
}
System.out.println("Entire money:"+kKala);
}
